<%
  # form_for is a rails helper for rendering forms in the view  
  # @hotel is an instance scoped variable that is declared in 
  # hotels_controller new method. It points to a new
  # instance of the Film model
  # f.submit will need a create action
%>


<%= form_for @hotel do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <br>
  <%= f.label :package_id, 'Package'%><i> (pilih role)</i> </br>
  <%= f.select :package_id, options_from_collection_for_select(Package.all, :id, :name) %>
  <br>
  <%= f.submit %>
<% end %>
<h1>Articles</h1>

<div id="articles" data-articles="<%= json_for @articles %>">
<% @articles.each do |article| %>
  <h2>
    <%= article.name %>
  </h2>
  <div class="info">
    on <%= article.published_at.strftime('%b %d, %Y') %>
  </div>
  <div class="content"><%= article.content %></div>
<% end %>
</div>
